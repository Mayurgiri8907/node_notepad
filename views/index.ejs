<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black/50">
    <form action="/create" method="post">
        <input type="text" placeholder="enter file name" class="bg-black my-10 mx-[150px] py-2 px-4 w-[1000px] text-white" name="filename">
        <input type="text" placeholder="enter file discription" class="bg-black my-0 mx-[150px] py-2 px-4 pb-10 w-[1000px] text-white" name="details">
        <div>

            <input type="submit" value="submit" class="bg-black/50 rounded text-white mt-9 ml-[150px] py-2 px-10">
        </div>
    </form>

    <div class="p-10 mt-10 ml-[100px] flex">
        <% if(files.length > 0){ %>
            <% files.forEach(function(val){%>

                <div class="bg-black/50 text-white m-5 py-5 px-10">
                    <h1><%=val%></h1>
                    <div class="">
                        <a href="file/<%= val%>" class="bg-black p-1 rounded">read more</a>
                         <a href="edit/<%= val%>" class="bg-black p-1 rounded">edit filename</a>
                         <a href="delete<%= val%>" class="bg-black p-1 rounded">delete file</a>   
                    </div>
                </div>
            <%}) %>

        <% } else{ %>

            <div class="bg-black/50 text-white m-5 py-5 px-10">
                <h1 class="mt-[100px] ml-[100px] text-white">empty file folder</h1>
            </div>
        <%}%>
        
        
        
    </div>
</body>
</html>